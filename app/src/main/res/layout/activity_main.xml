<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.github.myrefresh.MainActivity">
<in.srain.cube.views.ptr.PtrClassicFrameLayout
    android:id="@+id/pcfl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ptr_resistance="2.1"
    app:ptr_ratio_of_header_height_to_refresh="1.2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >
        <com.youth.banner.Banner
            android:id="@+id/bn_home"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:image_scale_type="fit_xy"
            app:scroll_time="2000"
            app:delay_time="5000"
            app:indicator_drawable_selected="@color/colorPrimary"
            app:indicator_drawable_unselected="@color/colorAccent"
            >

        </com.youth.banner.Banner>
        <ImageView
            android:id="@+id/iv"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:adjustViewBounds="true"
            android:src="@drawable/black_background"
            android:background="@color/colorAccent"
            />
        <TextView
            android:id="@+id/tv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:text="Hello World!"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </LinearLayout>

</in.srain.cube.views.ptr.PtrClassicFrameLayout>
</LinearLayout>
